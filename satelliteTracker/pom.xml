<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>gov.nasa.arc.mct</groupId>
  <name>MCT Satellite Tracker</name>
  <version>${mct.platform.version}</version>
  <artifactId>satelliteTracker</artifactId>
  <packaging>jar</packaging>
  <description/>
  <parent>
  	<artifactId>mct-superpom</artifactId>
  	<groupId>mct</groupId>
  	<version>2.0.1</version>
  	<relativePath>../superpom</relativePath>
  </parent>
  <build>
  	<plugins>
  		<plugin>
  			<groupId>org.apache.maven.plugins</groupId>
  			<artifactId>maven-compiler-plugin</artifactId>
  			<configuration>
  				<source>1.6</source>
  				<target>1.6</target>
  			</configuration>
  		</plugin>
  		<plugin>
  			<groupId>org.apache.maven.plugins</groupId>
  			<artifactId>maven-jar-plugin</artifactId>
  			<configuration>
  				<archive>
  					<manifestFile>./META-INF/MANIFEST.MF</manifestFile>
  				</archive>
  			</configuration>
  		</plugin>
  		<plugin>
  			<groupId>org.apache.maven.plugins</groupId>
  			<artifactId>maven-assembly-plugin</artifactId>
  			<version>2.2-beta-5</version>
  			<executions>
  				<execution>
  					<id>archive-project</id>
  					<phase>package</phase>
  					<goals>
  						<goal>single</goal>
  					</goals>
  					<configuration>
						<descriptors>
							<descriptor>src/build/resources/project.xml</descriptor>
						</descriptors>
  					</configuration>
  				</execution>
  			</executions>
  		</plugin>
  		<plugin>
  			<groupId>org.apache.maven.plugins</groupId>
  			<artifactId>maven-dependency-plugin</artifactId>
  			<executions>
  				<execution>
  					<id>copy-embedded-dependencies</id>
  					<phase>compile</phase>
  					<goals>
  						<goal>copy-dependencies</goal>
  					</goals>
  					<configuration>
  						<includeScope>system</includeScope>
  						<includeGroupIds>name.gano</includeGroupIds>
  						<includeArtifactIds>jSatTrack</includeArtifactIds>
  						<excludeGroupIds>org.slf4j,gov.nasa.arc.mct,xml-apis</excludeGroupIds>
  						<excludeArtifactIds>log4j</excludeArtifactIds>
  						<outputDirectory>${project.build.outputDirectory}</outputDirectory>
  					</configuration>
  				</execution>
  			</executions>
  		</plugin>  	 
  	</plugins>
  </build>
  
  <dependencies>
  	<dependency>
  		<groupId>gov.nasa.arc.mct</groupId>
  		<artifactId>mctcore</artifactId>
  		<version>${mct.platform.version}</version>
  	</dependency>
   <dependency>
    <groupId>gov.nasa.arc.mct</groupId>
  	<artifactId>timeSequenceFeedAggregator</artifactId>
  		<version>${mct.platform.version}</version>
  		<scope>provided</scope>
  	</dependency>
  	<dependency>
    	<groupId>name.gano</groupId>
  		<artifactId>jSatTrack</artifactId>
  		<version>4.1.4</version>
  		<scope>system</scope>
  		<systemPath>${project.basedir}/lib/JSatTrak.jar</systemPath>
  	</dependency>
  </dependencies>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  </properties>
  
</project>
